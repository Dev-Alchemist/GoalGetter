<div class="flex flex-col md:flex-row space-y-2 justify-between mb-4" id="<%= dom_id goal %>">
<% if goal.completed %>
  <div class="flex items-center text-sm text-white bg-green-400 py-2 px-5 inline-block font-medium">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
    </svg>
    Completed
  </div>
<% else %>
  <%= link_to goal_completed_path(goal), data: { turbo_method: "post" }, class: "flex items-center" do %>
    <div class="flex items-center text-sm text-gray-500 bg-gray-100 py-3 px-5 inline-block font-medium">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
      Mark complete
    </div>
  <% end %>
<% end %>

  <div class="ml-auto flex items-center text-sm text-gray-500 space-x-4">
    <%= link_to edit_goal_path(goal), class: "flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
      </svg>
      <span class="ml-1">Edit</span>
    <% end %>

    <%= button_to goal_path(goal), method: :delete, class: "flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
      <span class="ml-1">Delete</span>
    <% end %>
  </div>
</div>
<hr class="my-6 border-t border-gray-300 w-full">

<div class="my-5">
  <p class="font-bold text-md"><%= goal.title %></p>
</div>

<div class="flex my-5">
  <div class="w-1/2 flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2 text-gray-500">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
    </svg>
    <p class="text-gray-500"><span class="font-bold">Due Date:</span> <%= format_date(goal.due_date) %></p>
  </div>
  <div class="w-1/2">
    <p class="text-gray-500"><span class="font-bold">Priority:</span> <%= goal.priority %></p>
  </div>
</div>

<div class="my-5">
  <span class="block font-medium mb-1 text-gray-400">Description:</span>
  <p><%= goal.description %></p>
</div>
    