<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <span class="text-black font-bold text-lg mx-2">Edit Goal</span>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render "form", goal: @goal %>
  </div>

  <div class="mt-6"></div>

  <div class="mt-4 fixed bottom-0 left-0 right-0 bg-white p-4 shadow flex justify-center items-center">
    <div class="flex justify-end">
      <%= link_to 'Cancel', goal_path(@goal), class: "rounded-lg py-2 px-6 bg-gray-200 text-blue-500 font-medium cursor-pointer mr-3" %>
      <%= submit_tag "Save", class: "rounded-lg py-2 px-6 bg-blue-600 text-white font-medium cursor-pointer", form: "goal_form" %>
    </div>
  </div>
</div>
